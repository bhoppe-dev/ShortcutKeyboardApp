<Window x:Class="ShortcutKeyboardApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="320" Width="350" WindowStartupLocation="CenterOwner"
        Icon="/Resources/Settings.ico"
        Background="{DynamicResource PrimaryBackgroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Startup Options -->
        <TextBlock Grid.Row="0" Text="Startup Options" FontWeight="Bold" 
                   Margin="0,0,0,10" 
                   Foreground="{DynamicResource PrimaryTextBrush}"/>

        <CheckBox x:Name="StartMinimizedCheckBox" Grid.Row="1"
                  Content="Start Windows Minimized" 
                  Margin="0,0,0,10" 
                  Checked="StartMinimizedCheckBox_CheckChanged" 
                  Unchecked="StartMinimizedCheckBox_CheckChanged"
                  Foreground="{DynamicResource PrimaryTextBrush}"/>

        <CheckBox x:Name="StartAsTrayIconCheckBox" Grid.Row="2"
                  Content="Start as System Tray Icon" 
                  Margin="0,0,0,10" 
                  Checked="StartAsTrayIconCheckBox_CheckChanged" 
                  Unchecked="StartAsTrayIconCheckBox_CheckChanged"
                  Foreground="{DynamicResource PrimaryTextBrush}"/>

        <Separator Grid.Row="3" Margin="0,5,0,15"/>

        <!-- Appearance -->
        <TextBlock Grid.Row="4" Text="Appearance" FontWeight="Bold" 
                   Margin="0,0,0,10" 
                   Foreground="{DynamicResource PrimaryTextBrush}"/>

        <CheckBox x:Name="DarkModeCheckBox" Grid.Row="5"
                  Content="Dark Mode" 
                  Margin="0,0,0,15" 
                  Checked="DarkModeCheckBox_CheckChanged" 
                  Unchecked="DarkModeCheckBox_CheckChanged"
                  Foreground="{DynamicResource PrimaryTextBrush}"/>

        <Separator Grid.Row="6" Margin="0,0,0,15"/>

        <!-- Macro Button Count -->
        <StackPanel Grid.Row="7" Margin="0,0,0,15">
            <TextBlock Text="Macro Button Configuration" FontWeight="Bold" 
                       Margin="0,0,0,10" 
                       Foreground="{DynamicResource PrimaryTextBrush}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Number of Buttons: " 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>

                <Slider x:Name="MacroButtonCountSlider" Grid.Column="1"
                        Minimum="1" Maximum="16" Value="8"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        ValueChanged="MacroButtonCountSlider_ValueChanged"/>

                <TextBlock x:Name="MacroButtonCountLabel" Grid.Column="2" 
                           Text="8" FontWeight="Bold"
                           VerticalAlignment="Center" 
                           MinWidth="25" TextAlignment="Center"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
            </Grid>       
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" 
                    Width="75" 
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    Foreground="{DynamicResource PrimaryTextBrush}"/>
            <Button Content="Cancel" 
                    Width="75" 
                    Click="CancelButton_Click"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    Foreground="{DynamicResource PrimaryTextBrush}"/>
        </StackPanel>
    </Grid>
</Window>