<Window x:Class="ShortcutKeyboardApp.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Button Action" Height="300" Width="400"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        Foreground="{DynamicResource PrimaryTextBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select action type:" 
                   Margin="0,0,0,5" 
                   Foreground="{DynamicResource PrimaryTextBrush}"/>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,10">
            <RadioButton x:Name="RadioFile" 
                        Content="File" 
                        Margin="0,0,10,0" 
                        IsChecked="True" 
                        Foreground="{DynamicResource PrimaryTextBrush}"/>
            <RadioButton x:Name="RadioFolder" 
                        Content="Folder" 
                        Margin="0,0,10,0" 
                        Foreground="{DynamicResource PrimaryTextBrush}"/>
            <RadioButton x:Name="RadioExecutable" 
                        Content="Executable" 
                        Margin="0,0,10,0" 
                        Foreground="{DynamicResource PrimaryTextBrush}"/>
            <RadioButton x:Name="RadioLink" 
                        Content="Web Link" 
                        Foreground="{DynamicResource PrimaryTextBrush}"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Path selection -->
            <TextBlock Text="Path:" 
                      Grid.Row="0" 
                      Margin="0,0,0,5" 
                      Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBox x:Name="PathTextBox" 
                     Grid.Row="1"
                     Margin="0,0,5,0" 
                     Background="{DynamicResource SecondaryBackgroundBrush}" 
                     Foreground="{DynamicResource PrimaryTextBrush}"
                     VerticalContentAlignment="Center"/>
            <Button x:Name="BrowseButton" 
                    Grid.Row="1"
                    Grid.Column="1" 
                    Content="Browse" 
                    Click="BrowseButton_Click" 
                    Background="{DynamicResource SecondaryBackgroundBrush}" 
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Padding="10,5"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Display Text -->
            <TextBlock Text="Display Text:" 
                      Grid.Row="0" 
                      Margin="0,0,0,5" 
                      Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBox x:Name="DisplayTextBox" 
                     Grid.Row="1"
                     Background="{DynamicResource SecondaryBackgroundBrush}" 
                     Foreground="{DynamicResource PrimaryTextBrush}"
                     VerticalContentAlignment="Center"/>
        </Grid>

        <TextBlock x:Name="UrlHintText" 
                   Grid.Row="4" 
                   Text="Enter URL (e.g., www.example.com)" 
                   Margin="0,5,0,0" 
                   Foreground="{DynamicResource PrimaryTextBrush}" 
                   Opacity="0.7"
                   Visibility="Collapsed"/>

        <CheckBox x:Name="AdminCheckBox" 
                  Grid.Row="4" 
                  Content="Run with administrator privileges" 
                  Margin="0,10,0,0" 
                  Foreground="{DynamicResource PrimaryTextBrush}"/>

        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="OK" 
                    Width="75" 
                    Click="OkButton_Click" 
                    Margin="0,0,5,0" 
                    Background="{DynamicResource SecondaryBackgroundBrush}" 
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Padding="10,5"/>
            <Button Content="Cancel" 
                    Width="75" 
                    Click="CancelButton_Click" 
                    Background="{DynamicResource SecondaryBackgroundBrush}" 
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>